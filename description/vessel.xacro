<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:macro name="inertial_cylinder" params="mass length radius *origin">
        <inertial>
            <xacro:insert_block name="origin"/>
            <mass value="${mass}" />
            <inertia ixx="${(1/12) * mass * (3*radius*radius + length*length)}" ixy="0.0" ixz="0.0"
                    iyy="${(1/12) * mass * (3*radius*radius + length*length)}" iyz="0.0"
                    izz="${(1/2) * mass * (radius*radius)}" />
        </inertial>
    </xacro:macro>


    <material name="white">
        <color rgba="1 1 1 1" />
    </material>
    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>
    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
    <material name="green">
        <color rgba="0 1 0 1"/>
    </material>
    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>
    <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
    </material>

    <link name="base_link">
        <linear_damping>5.0</linear_damping>
        <angular_damping>10.0</angular_damping>
    </link>

    <joint name="vessel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="vessel_core"/>
        <origin xyz="0 0 1.3" rpy="0 0 0"/>
    </joint>

    <link name="vessel_core">
        <visual name="vessel_core_visual">
            <origin xyz="0 0 0.2" rpy="0 0 0"/>
            <geometry>
                <box size="1.2 0.8 0.3"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision name="vessel_core_collision">
            <geometry>
                <box size="1.2 0.8 0.3"/>
            </geometry>
            <origin xyz="0 0 0.2"/>
        </collision>
        <inertial>
            <origin xyz="0 0 0.2" rpy="0 0 0"/>
            <mass value="10.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                    iyy="1.0" iyz="0.0"
                    izz="1.0"/>
        </inertial>

    </link>

    <link name="captain_room">
        <visual>
            <geometry>
                <box size="0.7 0.5 0.25"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="orange"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.7 0.5 0.25"/>
            </geometry>
            <origin xyz="0 0 0"/>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="1.0"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0"
                    iyy="0.1" iyz="0.0"
                    izz="0.1"/>
        </inertial>
    </link>

    <joint name="captain_room_joint" type="fixed">
        <parent link="vessel_core"/>
        <child link="captain_room"/>
        <origin xyz="-0.2 0 0.3" rpy="0 0 0"/>
    </joint>

    <link name="vessel_nose">
        <visual>
            <geometry>
                <box size="0.562 0.562 0.3"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0.785398"/>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.562 0.562 0.3"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0.785398"/>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="1.0"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0"
                    iyy="0.1" iyz="0.0"
                    izz="0.1"/>
        </inertial>
    </link>

    <joint name="vessel_nose_joint" type="fixed">
        <parent link="vessel_core"/>
        <child link="vessel_nose"/>
        <origin xyz="0.6 0 0.2" rpy="0 0 0"/>
    </joint>

    <link name="chimney">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.3"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="grey"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.3"/>
            </geometry>
            <origin xyz="0 0 0"/>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.5"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0"
                    iyy="0.01" iyz="0.0"
                    izz="0.01"/>
        </inertial>
    </link>

    <joint name="chimney_joint" type="fixed">
        <parent link="vessel_core"/>
        <child link="chimney"/>
        <origin xyz="0.6 0 0.3" rpy="0 0 0"/>
    </joint>


    <joint name="left_wheel_joint" type="continuous">
        <parent link="vessel_core"/>
        <child link="left_wheel"/>
        <origin xyz="-0.5 0.4 0.12" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
        <limit effort="100" velocity="1.0" lower="-0.5" upper="0.5"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.2" length="0.05" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel">
        <material>Gazebo/Red</material>
    </gazebo>

    <joint name="right_wheel_joint" type="continuous">
        <parent link="vessel_core"/>
        <child link="right_wheel"/>
        <origin xyz="-0.5 -0.4 0.12" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
        <limit effort="100" velocity="1.0" lower="-0.5" upper="0.5"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.2" length="0.05" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel">
        <material>Gazebo/Red</material>
    </gazebo>

        <!-- RIGHT PROPELLER 1 -->
    <link name="right_propeller">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.1"/>
            </geometry>
            <origin xyz="0 0 0"/>
        </collision>
        <xacro:inertial_cylinder mass="0.2" length="0.1" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="right_propeller_joint" type="continuous">
        <parent link="vessel_core"/>  <!-- match the 'vessel_core' style you had -->
        <child link="right_propeller"/>
        <origin xyz="-0.6 -0.2 0.12" rpy="1.5708 0 1.5708"/>  <!-- from your working propeller1 -->
        <axis xyz="0 0 1"/>
    </joint>

    <gazebo reference="right_propeller">
        <material>Gazebo/Blue</material>
        <mu1>0.0001</mu1>
        <mu2>0.0001</mu2>
    </gazebo>

    <!-- LEFT PROPELLER 2 -->
    <link name="left_propeller">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.1"/>
            </geometry>
            <origin xyz="0 0 0"/>
        </collision>
        <xacro:inertial_cylinder mass="0.2" length="0.1" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="left_propeller_joint" type="continuous">
        <parent link="vessel_core"/>
        <child link="left_propeller"/>
        <origin xyz="-0.6 0.2 0.12" rpy="1.5708 0 1.5708"/>  <!-- from your working propeller2 -->
        <axis xyz="0 0 1"/>
    </joint>

    <gazebo reference="left_propeller">
        <material>Gazebo/Blue</material>
        <mu1>0.0001</mu1>
        <mu2>0.0001</mu2>
    </gazebo>


    <gazebo reference="vessel_core">
        <material>Gazebo/White</material>
        <mu1>0.0001</mu1>
        <mu2>0.0001</mu2>
    </gazebo>

    <gazebo reference="captain_room">
        <material>Gazebo/Orange</material>
        <mu1>0.0001</mu1>
        <mu2>0.0001</mu2>
    </gazebo>
    <gazebo reference="vessel_nose">
        <material>Gazebo/White</material>
        <mu1>0.0001</mu1>
        <mu2>0.0001</mu2>
    </gazebo>
    <gazebo reference="chimney">    
        <material>Gazebo/Grey</material>
        <mu1>0.0001</mu1>
        <mu2>0.0001</mu2>
    </gazebo>

</robot>